<mah:MetroWindow x:Class="ExifDateSetterWindows.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DataContext="{d:DesignInstance viewmodel:MainViewModel, IsDesignTimeCreatable=True}"
        xmlns:converters="clr-namespace:ExifDateSetterWindows.Converters"
        xmlns:viewmodel="clr-namespace:ExifDateSetterWindows.ViewModels"
        SizeToContent="Height"
        mc:Ignorable="d"
        Title="EXIF DATE SETTER" Width="640">
    <mah:MetroWindow.Resources>
        <converters:ActionsDisplayConverter x:Key="ActionsDisplayConverter"></converters:ActionsDisplayConverter>
    </mah:MetroWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        
        <GroupBox Grid.Row="0"
                  Margin="2"
                  Header="SOURCE FILES">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" 
                        Grid.Column="0"
                        Margin="5"
                        Content="ADD FILES"
                        Style="{DynamicResource MahApps.Styles.Button}"></Button>
                <Button Grid.Row="0" 
                        Grid.Column="1"
                        Margin="5"
                        Content="ADD FOLDER"
                        Style="{DynamicResource MahApps.Styles.Button}"></Button>
                <CheckBox Grid.Row="0"
                          Grid.Column="2"
                          Margin="5"
                          Content="Include Subdirectories"></CheckBox>
                <Rectangle Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           Grid.ColumnSpan="3"
                           StrokeThickness="1"
                           Stroke="Blue"
                           StrokeDashArray="6"></Rectangle>
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Grid.ColumnSpan="3" 
                           Text="Add files by buttons above or drag and drop them here."
                           FontSize="16"
                           Foreground="DarkGray"
                           FontStyle="Italic"
                           VerticalAlignment="Center"
                           Margin="10"></TextBlock>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1"
                  Margin="2"
                  Header="MODE SETTINGS">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"
                           VerticalAlignment="Center"
                           Text="Action"></TextBlock>
                <ComboBox Grid.Row="0" 
                          Grid.Column="1"
                          ItemsSource="{Binding ActionList}"
                          SelectedItem="{Binding SelectedAction}"
                          SelectedIndex="0"
                          Margin="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ActionsDisplayConverter}}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Margin="5"
                           VerticalAlignment="Center"
                           Text="File Types to Include"></TextBlock>
                <mah:MultiSelectionComboBox Grid.Row="0" 
                          Grid.Column="3"
                          IsEditable="False"
                          IsTextSearchEnabled="True"
                          SelectedIndex="0"
                          ItemsSource="{Binding SupportedFileTypesList}"
                          Margin="5">
                </mah:MultiSelectionComboBox>
                
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"
                           VerticalAlignment="Center"
                           Text="EXIF Tag"></TextBlock>
                <ComboBox Grid.Row="1" 
                          Grid.Column="1"
                          SelectedIndex="0"
                          ItemsSource="{Binding ExifDateTagsList}"
                          SelectedItem="{Binding SelectedExifDateTag}"
                          Margin="5">
                </ComboBox>
                
                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           Margin="5"
                           VerticalAlignment="Center"
                           Text="File Attribute"></TextBlock>
                <ComboBox Grid.Row="1" 
                          Grid.Column="3"
                          SelectedIndex="0"
                          ItemsSource="{Binding FileDateAttributesList}"
                          SelectedItem="{Binding SelectedFileDateAttribute}"
                          Margin="5">
                </ComboBox>
                
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Margin="5"
                           VerticalAlignment="Center"
                           Text="Default Date for Missing Values"></TextBlock>
                
                <DatePicker Grid.Row="2" 
                            Grid.Column="2" 
                            Grid.ColumnSpan="2" 
                            Margin="5"></DatePicker>
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="2"
                  Margin="2"
                  Header="ACTION SETTINGS">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Maximum Number of Threads"
                           VerticalAlignment="Center"
                           Margin="5"></TextBlock>
                <mah:NumericUpDown Minimum="0"
                                   Value="0"
                                   Margin="5"></mah:NumericUpDown>
                <TextBlock Text="(0 for Auto-Select)"
                           Margin="5"
                           Foreground="DarkGray"
                           VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </GroupBox>
        
        
        <GroupBox Grid.Row="3"
                  Margin="2"
                  Header="ACTIONS">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        Content="Analyze"></Button>
                
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="5"
                           Foreground="DarkGray"
                           Text="Extract EXIF and File Attribute Data for Selected Files"></TextBlock>
                
                <Button Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        Content="Start"></Button>
                
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="5"
                           Foreground="DarkGray"
                           Text="Begin the processing"></TextBlock>
            </Grid>
        </GroupBox>
        <mah:MetroProgressBar Grid.Row="4"
                              Value="50"
                              Margin="5"
                              Height="16"></mah:MetroProgressBar>
    </Grid>
</mah:MetroWindow>
